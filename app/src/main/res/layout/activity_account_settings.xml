<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <android.support.v7.widget.Toolbar
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
             />

    <ScrollView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/scrollView2" app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content">

            <Space
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="8dp"
                    android:background="#B9F6CA" android:id="@+id/spaceIn"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:text=""
                    android:id="@+id/emailEdit" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvEmail" android:layout_marginStart="8dp"
                    android:background="@drawable/rounded_shape" android:textSize="16sp"
                    android:layout_marginEnd="8dp" android:paddingLeft="8dp"/>
            <TextView
                    android:text="Почта"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvEmail"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp" android:layout_marginStart="8dp"/>
            <TextView
                    android:text="Пароль"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPwd"
                    app:layout_constraintTop_toBottomOf="@+id/tvEmail" android:layout_marginTop="26dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:text=""
                    android:id="@+id/pwdEdit" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/emailEdit"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/rounded_shape"
                    app:layout_constraintStart_toStartOf="@+id/emailEdit" app:layout_constraintHorizontal_bias="0.0"
                    android:textSize="16dp" android:paddingLeft="8dp"/>
            <TextView
                    android:text="Сервер входящей почты"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/pwdEdit" android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/spaceIn"/>

            <TextView
                    android:text="Сервер"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/spaceIn"
                    android:layout_marginStart="8dp" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="@+id/spaceIn"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:inputType="textPersonName"
                    android:text="imap.yandex.ru"
                    android:ems="10"
                    android:id="@+id/inServerNameEdit"
                    android:layout_marginTop="12dp" app:layout_constraintTop_toTopOf="@+id/spaceIn"
                    android:background="@drawable/rounded_shape" app:layout_constraintStart_toStartOf="@+id/emailEdit"
                    android:textSize="16dp" android:paddingLeft="8dp"/>
            <TextView
                    android:text="Порт"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    app:layout_constraintStart_toStartOf="@+id/spaceIn"
                    android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
                    android:layout_marginTop="24dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:inputType="numberSigned"
                    android:text="993"
                    android:ems="10"
                    android:id="@+id/inServerPortEdit" android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/inServerNameEdit"
                    android:background="@drawable/rounded_shape"
                    app:layout_constraintStart_toStartOf="@+id/emailEdit" android:textSize="16dp"
                    android:paddingLeft="8dp"/>

            <Space
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="8dp"
                    android:background="#B9F6CA"
                    android:id="@+id/spaceOut"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView10"/>
            <TextView
                    android:text="Сервер исходящей почты"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/spaceIn"/>
            <TextView
                    android:text="Сервер"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    app:layout_constraintTop_toTopOf="@+id/spaceOut"
                    app:layout_constraintStart_toStartOf="@+id/spaceOut" android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="Порт"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    app:layout_constraintTop_toBottomOf="@+id/textView11"
                    android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="@+id/spaceOut"
                    android:layout_marginStart="8dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:text="smtp.yandex.ru"
                    android:id="@+id/outServerNameEdit"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/spaceOut"
                    android:background="@drawable/rounded_shape" app:layout_constraintStart_toStartOf="@+id/emailEdit"
                    android:textSize="16dp" android:paddingLeft="8dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:inputType="number"
                    android:ems="10"
                    android:text="25"
                    android:id="@+id/outServerPortEdit"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/outServerNameEdit"
                    android:background="@drawable/rounded_shape" app:layout_constraintStart_toStartOf="@+id/emailEdit"
                    android:textSize="16dp" android:paddingLeft="8dp"/>


        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>